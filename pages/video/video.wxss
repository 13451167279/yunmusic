.header {
  height: 60rpx;
  padding: 10rpx;
  display: flex;
}
.header image {
  width: 60rpx;
  height: 60rpx;
}
.header .search {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: red;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #888888;
  margin: 0 20rpx;
  box-sizing: border-box;
}

.scroll {
  height: 60rpx;
  display: flex;
  padding-left: 20rpx;
}
.scroll .scrollItem {
  margin-right: 60rpx;
}

.scroll .scrollItem .scrollText {
  font-size: 26rpx;
  height: 60rpx;
  white-space: nowrap;
  line-height: 60rpx;
  display: block;
  box-sizing: border-box;
}
.scroll .scrollItem .scrollText.active {
  border-bottom: 4rpx solid red;
}

.videoScroll {
  height: calc(100vh-140rpx);
}
.videoScroll .scrollItem {
  padding: 10rpx 20rpx;
}
.videoScroll .scrollItem video {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}

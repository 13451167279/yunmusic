/* pages/index/index.wxss */
.indexContainer{
  height: 100%;
}
/* 轮播 */
.indexContainer .banner .bannerItem .bannerImg{
  width: 100%;
  height: 300rpx;
}
/* 导肮 */
.indexContainer .navList{
  display: flex;
  justify-content: space-around;
}
.indexContainer .navList .navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.indexContainer .navList .navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #D43C33;
  text-align: center;
  line-height: 100rpx;
  font-size: 40rpx;
  color:white;
  margin:20rpx 0;
}
.indexContainer .navList .navItem .navText{
  font-size: 26rpx;
  font-family: 'Courier New', Courier, monospace;
  font-weight: 400;
}
